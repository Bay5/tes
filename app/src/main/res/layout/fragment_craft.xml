<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFBE6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/craft_page_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/craft_header_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/craft_title_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#347928"
                    android:paddingTop="32dp"
                    android:paddingBottom="16dp"
                    android:paddingHorizontal="36dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/craft_title_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/craft"
                        android:textColor="#FFFBE6"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/craft_image"
                    android:layout_width="0dp"
                    android:layout_height="244dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@id/craft_title_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/craft_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="12dp"
                android:text="Tingginya jumlah sampah menumpuk di Indonesia"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/craft_header_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="12dp"
                android:text="Asep Solihin, 29 Februari 2024"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/craft_title"
                app:layout_constraintStart_toStartOf="parent" />



            <View
                android:id="@+id/divider_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="#818181"
                app:layout_constraintTop_toBottomOf="@id/author_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/craft_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="12dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam tristique eros vel enim volutpat porta. Vivamus nec condimentum ipsum. Duis lacinia, augue et pellentesque scelerisque, ex nisi aliquet lacus, at egestas tortor mauris vel eros. Donec laoreet faucibus ullamcorper. Aliquam pretium sed purus vel ornare. Etiam ut elit semper, ornare felis a, dictum quam. Suspendisse non leo vel orci commodo accumsan. Praesent vehicula tellus quis sollicitudin ultrices. Sed tempor condimentum metus, ut consectetur est."
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_line" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
